          <div class="flex px-4 mt-4">
            <div>
              <p class="text-sm text-gray-600">Date</p>
              <p id="followers" class="text-lg font-semibold text-gray-800">
                <%= USERDATA.date %>
              </p>
            </div>
            <div class="ml-16">
              <p class="text-sm text-gray-600">Produced</p>
              <p id="repositories" class="text-lg font-semibold text-gray-800">
                <%= USERDATA.Produced %>
              </p>
            </div>
          </div>
          <div class="flex px-4 mt-4">
