<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Movie Management Form</title>
    <link rel="stylesheet" href="./css/style.css" />
    <link
      rel="stylesheet"
      href="https://demos.creative-tim.com/notus-js/assets/styles/tailwind.css"
    />
    <link
      rel="stylesheet"
      href="https://demos.creative-tim.com/notus-js/assets/vendor/@fortawesome/fontawesome-free/css/all.min.css"
    />
    <script src="https://cdn.tailwindcss.com"></script>
    <script
      defer
      src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"
    ></script>
  </head>
  <body
    class="bg-black min-h-screen h-lvh bg-cover bg-center text-white"
    style="
      background-image: url('./images/film-102681_1280.jpg');
      width: 100%;
      background-repeat: no-repeat;
      backdrop-filter: blur(3px);
    "
  >
    <div class="container max-w-[600px] bg-transparent">
      <h1 class="text-2xl underline">Movie Management</h1>
      <div class="bb w-7 relative left-[800px]">
        <a href="#jayHoo">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            strokeWidth="{1.5}"
            stroke="currentColor"
            className="size-6"
          >
            <path
              strokeLinecap="round"
              strokeLinejoin="round"
              d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z"
            />
            <path
              strokeLinecap="round"
              strokeLinejoin="round"
              d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"
            />
          </svg>
        </a>
      </div>
      <form
        action="/movieSubmit"
        method="POST"
        class="movie-form bg-transparent"
        enctype="multipart/form-data"
      >
        <div class="form-group">
          <label for="title">Movie Title: </label>
          <input
            type="text"
            id="title"
            name="title"
            placeholder="Enter movie title"
            class="bg-transparent"
            required
            value="<%= movie.title %>"
          />
        </div>
        <div class="flex">
          <div class="form-group mr-16">
            <label for="title">Movie Image: </label>
            <input type="file" name="image" class="bg-transparent" />
          </div>
          <div class="form-group">
            <label for="release-date">Release Date:</label>
            <input
              type="date"
              id="release-date"
              name="releaseDate"
              value="<%= movie.date %>"
              class="bg-transparent text-white"
              style="color-scheme: dark"
              required
            />
          </div>
        </div>
        <div class="form-group">
          <label for="title"> Produced by</label>
          <input
            type="text"
            id="Produced"
            name="Produced"
            placeholder="Enter movie Producer"
            value="<%= movie.Produced %>"
            class="bg-transparent"
            required
          />
        </div>
        <div class="form-group">
          <label for="title">Directed by</label>
          <input
            type="text"
            id="Directed"
            name="Directed"
            value="<%= movie.Directed %>"
            placeholder="Enter movie Directer"
            class="bg-transparent"
            required
          />
        </div>
        <div class="form-group">
          <label for="genre">Type:</label>
          <select id="genre" name="genre" class="bg-transparent" required>
            <option value="">Select Type</option>
            <option value="Action">Action</option>
            <option value="Comedy">Comedy</option>
            <option value="Drama">Drama</option>
            <option value="Horror">Horror</option>
          </select>
        </div>
        <div class="form-group">
          <label for="rating">Rating:</label>
          <input
            type="number"
            class="bg-transparent"
            id="rating"
            name="rating"
            min="0"
            max="10"
            step="0.1"
            placeholder="Rate out of 10"
            value="<%= movie.rating %>"
            required
          />
        </div>

        <button type="submit" class="submit-btn">Add Movie</button>
      </form>
    </div>

    <!-- component -->
    <!-- component -->
    <div class="min-h-screen relative top-[400px] bg-black" id="jayHoo">
      <div
        class="block mb-4 mx-auto border-b border-slate-300 pb-2 max-w-[360px]"
      >
        <a
          target="_blank"
          href="https://www.material-tailwind.com/docs/html/card"
          class="block w-full px-4 py-2 text-center text-slate-700 transition-all"
        >
          <h1 class="text-3xl">Movie Views</h1>
        </a>
      </div>
      <div class="w-full flex flex-wrap justify-center">
        <!-- Centering wrapper -->
        <% movie.forEach((USERDATA)=>{ %>
        <div
          class="max-w-[26rem] mx-3 my-3 rounded-xl bg-white bg-clip-border text-gray-700 shadow-lg"
        >
          <div class="imgPoster">
            <img
              src="<%= USERDATA.path %>"
              alt="<%= USERDATA.title %>"
              class="w-full h-[300px] p-3"
              style="
                object-fit: cover;
                background-position: center;
                background-size: cover;
              "
            />
          </div>
          <div class="box flex justify-between px-4">
            <p id="followers" class="text-lg font-semibold text-gray-800">
              <%= USERDATA.title %>
            </p>

            <p
              class="flex items-center gap-1.5 font-sans text-base font-normal leading-relaxed text-blue-gray-900 antialiased"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="-mt-0.5 h-5 w-5 text-yellow-700"
              >
                <path
                  fill-rule="evenodd"
                  d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z"
                  clip-rule="evenodd"
